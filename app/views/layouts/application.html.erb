<!--This file contains what will show independent the page -->
<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Gitting</a>
    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Pagina Inicial", controller: "static_pages", action: "home" %></li>
        <li><%= link_to "Entenda a ferramenta", controller: "static_pages", action: "about" %></li>
        <li><%= link_to "Contato", controller: "contacts", action: "new" %></li>
        <% if current_user %>
         <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <%= current_user.username %>
          <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a>Perfil</a></li>
            <li><a>Configurações</a></li>
            <li role="separator" class="divider"></li>
            <li><a><%= link_to  "Logout", logout_path, method: "delete" %></a></li>
          </ul>
        </li>
        <% else %>
          <li><%= link_to "Login", controller: "users", action: "new" %></li>
        <% end %>    
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<%= yield %>
</body>
</html>
