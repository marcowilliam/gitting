<!--
  File name: index.html.erb
  Description: This file contains what will show independent the page to represent all groups
-->
<!DOCTYPE html>
<html lang="en">
  <body style="padding-top: 6%; padding-left:2%;">

    <div class="row">
      <div class="col-lg-6">
        <div class="input-group">
          <%= form_tag(discipline_groups_path, :method => :get) do %>
          <%= text_field_tag 'search',nil, placeholder: 'Procure por grupos...', :class => "form-control" %>

          <span class="input-group-btn">
            <%= submit_tag "Buscar", :class => "btn btn-default" %>
          </span>
          <% end %>

        </div>
        <!-- /input-group -->
      </div>
      <!-- /.col-lg-6 -->
    </div>
    <!-- /.row -->
    <div class="groups-layout">
      <div class="row">
        <h3><%= @pageTitle %></h3>
      </div>
      <% if @groups.empty? %>
      <div class="row">
        <div class="col-lg-6">
          <div class="alert alert-info" role="alert" style="width:750px;">
            <%= @groupsNotFound %>
          </div>
        </div>
      </div>
      <%else%>
      <div class="row">
        <%@groups.each do |group|%>
        <div class="col-sm-4 col-md-3">
          <div class="thumbnail">
            <%=image_tag("grupos_image.png", style: 'padding-top: 0%; padding-left: 0%; height: 40px;')%>
            <div class="caption">
              <h3 style="text-align:center"><%= group.group_name%></h3>
              <p><%= group.group_description %></p>
              <%= link_to "Entrar", group_path(group), :class => "btn btn-default" %>
            </div>
          </div>
        </div>
        <%end%>
      </div>
      <%end%>
      <p>
        <a class="btn btn-primary btn-lg" href="/groups/new" role="button">Criar uma grupo</a>
      </p>
    </div>
  </body>
</html>
